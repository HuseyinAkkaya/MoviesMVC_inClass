@model List<MoviesMVC_inClass.Entites.Director>
@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>
<a href="/Movies/ExportMoviesToXML" class="btn badge-dark" >ExportMoviesToXML</a>
<br/>
<a href="/Movies/ExportMoviesToJson" class="btn badge-dark">ExportMoviesToJson</a>

<table class="table table-hover">
    <thead>
    <tr>
        <td>Name</td>
        <td>Production Year</td>
        <td>Box Office Return</td>
    </tr>

    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.Surname</td>
            <td>@movie.Retired</td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3" style="text-align:right ">
            @Model.Count movies found.
        </td>
    </tr>
    </tfoot>
</table>