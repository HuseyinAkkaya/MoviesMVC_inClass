@model List<MoviesMVC_inClass.Entites.Movie>
@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Production Year</td>
            <td>Box Office Return</td>
        </tr>

    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.ProductionYear</td>
                <td>@movie.BoxOfficeReturn</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" style="text-align:right ">
                @Model.Count movies found.
            </td>
        </tr>
    </tfoot>
</table>